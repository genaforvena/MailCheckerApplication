<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.mera.imozerov.mailcheckerapplication.activities.EmailViewActivity">

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/email_view_subject_title"
        android:text="@string/email_view_subject_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/email_view_subject"
        android:layout_toRightOf="@id/email_view_subject_title"
        android:text="Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/email_view_sent_time_title"
        android:layout_below="@id/email_view_subject"
        android:text="@string/email_view_sent_time_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/email_view_sent_time"
        android:layout_toRightOf="@id/email_view_sent_time_title"
        android:layout_below="@id/email_view_subject"
        android:text="Sent date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/email_view_sender_title"
        android:layout_below="@id/email_view_sent_time"
        android:text="@string/email_view_sender_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="5dp"
        android:id="@+id/email_view_sender"
        android:layout_toRightOf="@id/email_view_subject_title"
        android:layout_below="@id/email_view_sent_time"
        android:text="Sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ScrollView
        android:layout_below="@id/email_view_sender"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="5dp"
            android:id="@+id/email_view_content"
            android:text="Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </ScrollView>

</RelativeLayout>
